<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondoiphone"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <EditText
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese TÃ­tulo"
        android:textSize="30dp"
        />

    <EditText
        android:id="@+id/contenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Contenido"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/aceptar"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/btnVerde"
        android:text="Agregar Nota"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SINCRONIZAR SQLite - Firebase"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        />

    <ImageButton
        android:id="@+id/sincronizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sincronizar"
        android:layout_gravity="center"
        android:text="Sincronizar"
        android:textSize="20dp"
        android:backgroundTint="@color/transparente"/>

    <Button
        android:id="@+id/cancelar"
        android:layout_width="371dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/btnRojo"
        android:text="REGRESAR"
        android:layout_marginTop="50dp"
        android:textSize="20dp" />

</LinearLayout>